<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sseg_layout"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/sample_text"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="7Segment: " />

        <EditText
            android:id="@+id/sseg_input"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="enter number"
            android:inputType="number"
            android:maxLength="4" />

        <Button
            android:id="@+id/sseg_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="입력" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lcd_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/sseg_layout"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lcd first: " />

        <EditText
            android:id="@+id/lcd_input1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="first string"
            android:inputType="text"
            android:maxLength="16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lcd_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lcd_layout1"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lcd second: " />

        <EditText
            android:id="@+id/lcd_input2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="second string"
            android:inputType="text"
            android:maxLength="16" />

        <Button
            android:id="@+id/lcd_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="입력" />
    </LinearLayout>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pbuttonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="눌린 버튼 없음"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>